@model AgricultDetailMarket.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<civ class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <span class="anchor"></span>
                    <div class="card card-outline-secondary border border-white">
                        <div class="card-header">
                            <h3 class="mb-0 text-center text-black">Регистрация</h3>
                        </div>
                        <div id ="form_account" class="card-body">
                            <form  asp-controller="Account" asp-action="Register" method="post">
                                <div asp-validation-summary="All" class="text-danger text-center"></div>
                                <div>
                                    <input id="form_input_account" asp-for="Email" type="email" placeholder="Введите Email" class="text-center" />
                                </div>
                                <div>
                                    <input id="form_input_account" asp-for="Password" type="password" placeholder="Введите пароль" class="text-center" />
                                </div>
                                <div>
                                    <h2 class="text-center"><a id="btn_other_form" asp-controller="Account" asp-action="Login" >Войти</a></h2>
                                </div>
                                <button id="btn_action_form" type="submit" class="float-right">Зарегистрироваться</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</civ>
